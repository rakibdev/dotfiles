{
  "name": "vscode-ai",
  "displayName": "VSCode AI",
  "description": "VSCode extension for AI agents",
  "version": "1.0.0",
  "publisher": "rakib",
  "private": true,
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./build/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vscode-ai.mentionFile",
        "title": "Mention File"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-ai.mentionFile",
        "key": "ctrl+l",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "dev": "DEV=true bun ./scripts/build.ts",
    "build": "bun ./scripts/build.ts",
    "package": "bun run build && bun --bun vsce package --no-dependencies --allow-missing-repository"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/vscode": "^1.99.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.25.0"
  }
}
