{
  "name": "opencode-mcp",
  "displayName": "OpenCode MCP",
  "description": "MCP server exposing real-time VSCode diagnostics for AI agents",
  "version": "0.1.0",
  "publisher": "opencode",
  "private": true,
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./build/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {},
  "scripts": {
    "dev": "DEV=true bun ./scripts/build.ts",
    "build": "bun ./scripts/build.ts",
    "package": "bun run build && bun --bun vsce package --no-dependencies --allow-missing-repository"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/vscode": "^1.99.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.25.0"
  }
}
