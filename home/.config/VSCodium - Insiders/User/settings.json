{
  "workbench.iconTheme": "catppuccin-latte",
  "workbench.colorTheme": "Material Code",
  "workbench.startupEditor": "none",
  "workbench.list.mouseWheelScrollSensitivity": 6,
  "workbench.localHistory.maxFileEntries": 10,
  "workbench.commandPalette.history": 10,
  "window.menuBarVisibility": "hidden",
  "window.customTitleBarVisibility": "never",
  "workbench.activityBar.location": "hidden",
  "window.titleBarStyle": "native",
  "window.dialogStyle": "custom",
  "window.zoomLevel": 1.4,
  "editor.fontFamily": "SF Mono",
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.lineNumbers": "off",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.semanticHighlighting.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.suggestFontSize": 14,
  "editor.suggestSelection": "recentlyUsed",
  "editor.mouseWheelScrollSensitivity": 6,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.accessibilitySupport": "off",
  "editor.formatOnSave": true,
  "editor.scrollbar.horizontal": "hidden",
  // "editor.glyphMargin": true,
  "breadcrumbs.enabled": false,
  "problems.decorations.enabled": false,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.codeActionsOnSave": {
    // "source.removeUnusedImports": "always"
    // Avoid `source.organizeImports` it makes `.vue` file saving slow.
  },
  "editor.pasteAs.preferences": ["text.updateImports"],
  "diffEditor.ignoreTrimWhitespace": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.rightClickBehavior": "copyPaste",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.shellIntegration.history": 10,
  "terminal.integrated.stickyScroll.enabled": false,

  "security.workspace.trust.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "extensions.ignoreRecommendations": true,
  "workbench.enableExperiments": false,
  "update.mode": "none",

  "files.enableTrash": false,
  "files.exclude": {
    "**/node_modules": true,
    "**/build": true,
    "**/dist": true,
    "**/.git": true
  },
  "files.watcherExclude": {
    "**/node_modules": true,
    "**/build": true,
    "**/dist": true,
    "**/.git": false,
    // Hidden folders (.*) are auto-excluded since they're typically cache/build artifacts.
    // `.mongodb` storage folder with thousands of files spiked VSCode to 98% CPU.
    "**/.*": true
  },

  "git.pruneOnFetch": true,
  "git.untrackedChanges": "separate",
  "git.confirmSync": false,
  "git.inputValidationSubjectLength": 120,

  "typescript.preferences.useAliasesForRenames": false,
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnPaste.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  "json.schemaDownload.enable": true,

  "debug.onTaskErrors": "abort",
  "debug.console.acceptSuggestionOnEnter": "on",

  // Fixes `Error: Invalid debug adapter`
  // https://github.com/oven-sh/bun/issues/9239#issuecomment-2205558525
  "bun.runtime": "/usr/bin/bun",

  // clangd related.
  "clangd.path": "/usr/bin/clangd", // "pacman -S clang".
  "clangd.arguments": ["--header-insertion=iwyu"],
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.arrowParens": "avoid",
  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.printWidth": 120,
  "prettier.semi": false,

  "editor.inlineSuggest.suppressSuggestions": true,
  "git.blame.editorDecoration.enabled": true,
  "material-code.inject": ["div[tabindex=\"0\"] .hover-row .marker.hover-contents { display: none; }"],
  "remote.SSH.remotePlatform": {
    "digialocean_keycrypt": "linux",
    "crossapi": "linux",
    "keycrypt": "linux"
  },
  "scm.repositories.selectionMode": "single",
  "diffEditor.renderSideBySide": false
}
