{
  "$schema": "https://opencode.ai/config.json",
  "startup_view": "last_chat",
  "tui": {
    "scroll_speed": 20
  },
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "rm *": "ask",
      "sudo *": "ask",
      "git *": "ask",
      "git diff *": "allow",
      "git status *": "allow",
      "git show *": "allow"
    }
  },
  "keybinds": {
    "input_newline": "alt+enter",
    "session_new": "ctrl+n",
    "messages_last": "ctrl+down"
  },
  "provider": {
    "opencode": {
      "models": {
        "big-pickle": {
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "low"
          }
        }
      }
    }
  },
  "agent": {
    "build": {
      "description": "Advanced AI coder with context-aware refactoring",
      "prompt": "{file:./code.md}"
      // "temperature": 0.5
    },
    "general": {
      "disable": true
    },
    "plan": {
      "disable": true
    },
    }
  },
  "tools": {
    "codesearch": false,
    "websearch": false
  },
  "lsp": false,
  "mcp": {
    "mongodb": {
      "enabled": false,
      "type": "local",
      "command": ["bun", "--cwd", "/home/rakib/Downloads/mcp", "mongodb", "--read-only"],
      "environment": {
        "MCP_MONGODB_URI": "{env:MCP_MONGODB_URI}"
      }
    },
    "figma": {
      "enabled": false,
      "type": "local",
      "command": ["bun", "/home/rakib/Downloads/mcp/node_modules/figma-developer-mcp/dist/bin.js", "--stdio"],
      "environment": {
        "FIGMA_API_KEY": "{env:FIGMA_API_KEY}"
      }
    },
    "playwriter": {
      "enabled": false,
      "type": "local",
      "command": ["bun", "run", "--cwd", "/home/rakib/Downloads/mcp", "playwriter"]
    }
  },
  "command": {
    "commit": {
      "agent": "build",
      "template": "Stage edited files from current context. Create short generic commit message (lowercase) - describe what was fixed/added, not implementation details like 'move X to Y'. Commit and push. Do all in single command. Skip git status/diff/log commands. Work silently."
    }
  }
}
