{
  "$schema": "https://opencode.ai/config.json",
  // "startup_view": "last_chat",
  "tui": {
    "scroll_speed": 20
  },
  "permission": {
    "webfetch": "allow",
    "bash": {
      "*": "allow",
      "rm *": "ask",
      "sudo *": "ask",
      "git *": "ask",
      "git diff *": "allow",
      "git status *": "allow",
      "git show *": "allow"
    }
  },
  "keybinds": {
    "input_newline": "alt+enter",
    "session_new": "ctrl+n",
    "messages_last": "ctrl+down"
  },
  "provider": {
    "opencode": {
      "models": {
        "big-pickle": {
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "low"
          }
        }
      }
    }
  },
  "experimental": {
    "batch_tool": true
  },
  "agent": {
    "build": {
      "description": "Advanced AI coder with context-aware refactoring",
      "prompt": "{file:./code.md}",
      "temperature": 0.7
    },
    "general": {
      "disable": true
    },
    "plan": {
      "disable": true
    },
    }
  },
  "tools": {
    "codesearch": false,
    "websearch": false,
    "edit": false // using multiedit
  },
  "lsp": false,
  "mcp": {
    "mongodb": {
      "type": "local",
      "command": ["mongodb", "--read-only"],
      "environment": {
        "MCP_MONGODB_URI": "{env:MCP_MONGODB_URI}"
      }
    },
    "figma": {
      "type": "local",
      "command": ["figma-developer-mcp", "--stdio"],
      "environment": {
        "FIGMA_API_KEY": "{env:FIGMA_API_KEY}"
      }
    },
    "playwriter": {
      "type": "local",
      "command": ["playwriter"]
    },
    "ssh": {
      "type": "local",
      "command": ["bun", "/home/rakib/Downloads/dotfiles/mcp/ssh.ts"],
      "environment": {
        "SSH_HOST": "{env:SSH_HOST}",
        "SSH_USER": "{env:SSH_USER}",
        "SSH_PASSWORD": "{env:SSH_PASSWORD}"
      }
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PAT}"
      }
    }
  },
  "command": {
    "commit": {
      "agent": "build",
      "template": "Stage edited files from current context. Create short generic commit message (lowercase) - describe what was fixed/added, not implementation details like 'move X to Y'. Commit and push. Do all in single command. Skip git status/diff/log commands. Work silently."
    }
  }
}
